@model IEnumerable<PostoDeGasolina.Models.Veiculo>

@{
    ViewData["Title"] = "Veículos";
}

<h2>Veículos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Veículo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Modelo</th>
            <th>Marca</th>
            <th>Ano</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veiculo in Model)
        {
            <tr>
                <th>@veiculo.Id</th>
                <td>@veiculo.Modelo</td>
                <td>@veiculo.Marca</td>
                <td>@veiculo.Ano</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@veiculo.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
