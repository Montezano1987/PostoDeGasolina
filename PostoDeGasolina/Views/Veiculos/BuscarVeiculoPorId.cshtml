@model PostoDeGasolina.Models.Veiculo

@{
    ViewData["Title"] = "Buscar veículo por Id";
}

<h1>Buscar Veículo por Id</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarVeiculoPorId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID do Veículo</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar Veículo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>
}

<div>
    <a asp-action="Index">Voltar à Lista de Veículos</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
